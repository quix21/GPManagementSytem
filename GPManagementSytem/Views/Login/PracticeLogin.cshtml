@using GPManagementSytem.Models
@model GPManagementSytem.Models.Users
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>GP Management System - Login</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-icons/3.0.1/iconfont/material-icons.min.css">
    <link rel="stylesheet" href="~/Content/fonts/fontawesome5-overrides.min.css">
    <link rel="stylesheet" href="~/Content/Contact-Form-Clean.css">
    <link rel="stylesheet" href="~/Content/custom.css">

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


</head>
<body id="page-top">
    <div id="wrapper">
        <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0">
            <div class="container-fluid d-flex flex-column p-0">
                <img src="~/Images/uol-logo.svg" class="img-logo"><a class="navbar-brand d-flex justify-content-center align-items-center sidebar-brand m-0" href="#">
    <div class="sidebar-brand-icon rotate-n-15"></div>
    <div class="sidebar-brand-text mx-3"><span style="font-size: 12px;color: #d0b006;"><i class="material-icons"></i>GP Management System</span></div>
</a>
                <hr class="sidebar-divider my-0">

            </div>
        </nav>
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
                    <div class="container-fluid"><button class="btn btn-link d-md-none rounded-circle me-3" id="sidebarToggleTop" type="button"><i class="fas fa-bars"></i></button></div>
                </nav>
                <hr class="main">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <section class="contact-clean">
                                @using (Html.BeginForm())
                                {
                                    @Html.ValidationSummary()
                                    @Html.AntiForgeryToken()


                                    <h2 class="text-center">GP Management System Practice Login</h2>
                                    <div class="mb-3">
                                        @Html.EditorFor(model => model.Username,
                    new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Username" } }
                    )
                                        @*@Html.ValidationMessageFor(model => model.Username, "", new { @class = "alert alert-danger" })*@
                                    </div>

                                    <div class="mb-3">
                                        <input class="form-control" type="password" placeholder="Password" id="password" name="password" required="">
                                    </div>

                                    <div class="mb-3"></div>
                                    <div class="mb-3"></div>
                                    <div class="mb-3"><button class="btn btn-primary" type="submit">Login</button></div>

                                    <div class="mb-3"></div>
                                    <div class="mb-3">If you would like to register a practice, click @Html.ActionLink("here", "RegisterPractice", "Login")</div>
                                    <div class="mb-3"></div>
                                    <div class="mb-3">If you have forgotten your password, click @Html.ActionLink("here", "ResetPassword", "Login")</div>
                                }

                            </section>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="bg-white sticky-footer">
                <div class="container my-auto">
                    <div class="text-center my-auto copyright"></div>
                </div>
            </footer>
        </div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/bs-init.js"></script>
    <script src="~/Scripts/theme.js"></script>


</body>
</html>
